<div class= "show view-container">
  <h2>Animal Details</h2>

    <p>Name: <%= @animal.name %></p>
    <p>Breed: <%= @animal.breed %></p>
    <p>Admission date: <%= @animal.admission_date %></p>
    <p>Ready for adoption? <%= @animal.ready_to_adopt %></p>

  <form action="/animals/<%= @animal.id %>/edit" method="get" class="form-inline">
  <input type="submit" value="edit" class="button" />
  </form>

  <form action="/animals/<%= @animal.id %>/delete" method="post" class="form-inline">
  <input type="submit" value="delete" class="button" />
  </form>
</div>