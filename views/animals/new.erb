<form action="/animals" method="post">

<h2>Insert new animal details</h2>

<ul>
  <li>
    <label for="name-field">Name:</label>
    <input id="name-field" name="name" type="text"/>
  </li>
  <li>
    <label for="breed-field">Breed:</label>
    <input type="text" id="breed-field" name="breed">
  </li>
  <li>
    <label for="admission-date-field">Date admitted:</label>
    <input type="text" id="admission-date-field" name="admission-date">
  </li>
  <li>
    <label for="ready-for-adoption">Ready for adoption?</label>
    <input type="boolean" id="ready-for-adoption" name="ready_to_adopt">
  </li>
</ul>

<input type="submit" value="Add animal">
</form>